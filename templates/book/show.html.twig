{% extends 'base.html.twig' %}

{% block title %}Boekdetails{% endblock %}

{% block body %}
    <h1>Boekdetails</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Titel</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>Samenvatting</th>
                <td>{{ book.summary }}</td>
            </tr>
            <tr>
                <th>Publicatiedatum</th>
                <td>{{ book.publicationDate ? book.publicationDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mb-4">
        <a href="{{ path('app_book_index') }}">Terug naar overzicht</a> |
        <a href="{{ path('app_book_edit', {'id': book.id}) }}">Bewerken</a>
    </div>

    {{ include('book/_delete_form.html.twig') }}
{% endblock %}
