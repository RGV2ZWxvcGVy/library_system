{% set current_path = app.request.get('_route') %}

<header class="pb-5 mb-5">
    <nav class="navbar navbar-expand-lg bg-light fixed-top">
        <div class="container-fluid mx-5">
            <a class="navbar-brand" href="#">Bibliotheeksysteem</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link{{ current_path == "app_home" ? " active" : "" }}"
                           aria-current="page" href="{{ path('app_home') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link{{ current_path == "app_customer_index" or current_path == "app_customer_new"
                        or current_path == "app_customer_show" or current_path == "app_customer_edit" ? " active" : "" }}"
                           aria-current="page" href="{{ path('app_customer_index') }}">Klanten</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link{{ current_path == "app_book_index" or current_path == "app_book_new"
                        or current_path == "app_book_show" or current_path == "app_book_edit" ? " active" : "" }}"
                           aria-current="page" href="{{ path('app_book_index') }}">Boeken</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link{{ current_path == "app_author_index" or current_path == "app_author_new"
                        or current_path == "app_author_show" or current_path == "app_author_edit" ? " active" : "" }}"
                           aria-current="page" href="{{ path('app_author_index') }}">Auteurs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link{{ current_path == "app_loan_index" or current_path == "app_loan_new"
                        or current_path == "app_loan_show" or current_path == "app_loan_edit" ? " active" : "" }}"
                           aria-current="page" href="{{ path('app_loan_index') }}">Uitleningen</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
