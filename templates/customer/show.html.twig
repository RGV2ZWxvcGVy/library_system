{% extends 'base.html.twig' %}

{% block title %}Klantdetails{% endblock %}

{% block body %}
    <h1>Klantdetails</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Naam</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>E-mailadres</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Telefoon</th>
                <td>{{ customer.phone }}</td>
            </tr>
            <tr>
                <th>Postcode</th>
                <td>{{ customer.postalCode }}</td>
            </tr>
            <tr>
                <th>Huisnummer</th>
                <td>{{ customer.houseNumber }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mb-4">
        <a href="{{ path('app_customer_index') }}">Terug naar overzicht</a> |
        <a href="{{ path('app_customer_edit', {'id': customer.id}) }}">Bewerken</a>
    </div>

    {{ include('customer/_delete_form.html.twig') }}
{% endblock %}
